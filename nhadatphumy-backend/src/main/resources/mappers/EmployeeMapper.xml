<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.phumyreal.nhadatphumybackend.mappers.EmployeeMapper">

    <resultMap id="employeeListMap" type="Employee">
        <result property="id" column="id" javaType="Long"/>
        <result property="firstName" column="first_name" javaType="String"/>
        <result property="lastName" column="last_name" javaType="String"/>
        <result property="emailId" column="email_id" javaType="String"/>
    </resultMap>

    <select id="selectAllEmployee" resultMap="employeeListMap" parameterType="hashMap">
        SELECT id
            , first_name
            , last_name
            , email_id
        FROM employee
    </select>

    <resultMap id="employeeMap" type="Employee">
        <result property="id" column="id" javaType="long"/>
        <result property="firstName" column="first_name" javaType="String"/>
        <result property="lastName" column="last_name" javaType="String"/>
        <result property="emailId" column="email_id" javaType="String"/>
    </resultMap>

    <select id="selectEmployeeById" resultMap="employeeMap" parameterType="long">
        SELECT id
            , first_name
            , last_name
            , email_id
        FROM employee
        WHERE id = #{id}
    </select>

    <insert id="insertEmployee" parameterType="Employee">
        INSERT INTO employee (
             first_name
            , last_name
            , email_id
        ) VALUES (
              #{firstName}
            , #{lastName}
            , #{emailId}
        )
    </insert>

    <update id="updateEmployee" parameterType="Employee">
        UPDATE employee
        SET
          first_name = #{firstName}
        , last_name = #{lastName}
        , email_id = #{emailId}
        WHERE id = #{id}
    </update>

    <delete id="deleteEmployeeId" parameterType="long">
        DELETE from employee WHERE id = #{id}
    </delete>
</mapper>